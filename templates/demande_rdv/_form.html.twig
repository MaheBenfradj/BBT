{{ form_start(form) }}

<div class="row">
    <div class="col-md-4 form-group">
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        <div class="validate"></div>
    </div>
    <div class="col-md-4 form-group mt-3 mt-md-0">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

        <div class="validate"></div>
    </div>
    <div class="col-md-4 form-group mt-3 mt-md-0">
        {{ form_errors(form.telephone) }}
        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
        <div class="validate"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-4 form-group mt-3">
        {{ form_errors(form.pays) }}
        {{ form_widget(form.pays) }}
        <div class="validate"></div>
    </div>
    <div class="col-md-4 form-group mt-3">
        {{ form_widget(form.dateNaissance) }}
        <div class="validate"></div>
    </div>
    <div class="col-md-4 form-group mt-3">
        {{ form_errors(form.dateRDV) }}
        {{ form_widget(form.dateRDV) }}
        <div class="validate"></div>
    </div>

</div>
<div class="row">

    <div class="col-md-4 form-group mt-3">
        {{ form_errors(form.intervention) }}
        {{ form_widget(form.intervention) }}
        <div class="validate"></div>
    </div>
    <div class="col-md-4 form-group mt-3">
        {{ form_errors(form.clinique) }}
        {{ form_widget(form.clinique) }}
        <div class="validate"></div>
    </div>
</div>
<div class="form-group mt-3">
    {{ form_errors(form.message) }}
    {{ form_widget(form.message) }}
    <div class="validate"></div>
</div>
<br>
<br>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<br>
<div class="text-center">
    <button style="background: #d89874;
    border: 0;
    padding: 10px 35px;
    color: #fff;
    transition: 0.4s;
    border-radius: 50px;">{{ button_label|default('Prendre rendez-vous') }}</button>
</div>

{{ form_end(form) }}